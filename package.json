{
  "name": "teahouse-app",
  "version": "1.0.0",
  "description": "茶楼管理系统 - 可打包为 Windows EXE 的桌面应用",
  "main": "electron/main.js",
  "author": "TeaHouse",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:win": "electron-builder -w"
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.teahouse.app",
    "productName": "茶楼管理系统",
    "asar": true,
    "files": [
      "index.html",
      "style.css",
      "script.js",
      "electron/**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "artifactName": "TeaHouse_${version}_${arch}.${ext}"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false
    }
  }
}
